@model List<PontoTuristicoModel>
@{
    ViewData["Title"] = "Listagem de Ponto Turistico";
}


<div class="row">
    <div class="col-md-9">
        <img height="50px" width="auto" src="https://i.imgur.com/KKWPjXF.png" />
    </div>
    <div class="col-md-3">
        <a class="btn btn-primary" asp-controller="PontoTuristico" asp-action="Criar" role="button">Cadastrar Ponto Turistico</a>
    </div>
</div>
    
<br />

<div class="text-center">

    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" data-bs-dismiss="alert" aria-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }

    <br />

    <h2 class="font-normal">Listagem de ponto turistico</h2>

    <br />

    <table id="table-pontoTuristico" class="display" style="width:100%">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Descrição</th>
                <th scope="col">Cidade/Estado</th>
                <th scope="col">Data de Cadastro</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (PontoTuristicoModel pontoTuristico in Model)
                {
                    <tr>
                        <th scope="row">@pontoTuristico.Id</th>
                        <td>@pontoTuristico.Nome</td>
                        <td>@pontoTuristico.Descricao</td>
                        <td>@pontoTuristico.Cidade/@pontoTuristico.Estado</td>
                        <td>@pontoTuristico.DataCadastro</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" asp-action="Detalhe" asp-controller="PontoTuristico" asp-route-id="@pontoTuristico.Id" class="btn btn-success">Detalhes</a>
                                <a role="button" asp-action="Editar" asp-controller="PontoTuristico" asp-route-id="@pontoTuristico.Id" class="btn btn-primary">Editar</a>
                                <a role="button" asp-action="ApagarConfirmacao" asp-controller="PontoTuristico" asp-route-id="@pontoTuristico.Id" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>